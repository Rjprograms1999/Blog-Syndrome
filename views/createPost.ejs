<%- include('partials/header.ejs') %>

<h1>Create Post</h1>
<hr />

<!-- enctype is necessary to tell that the upload will include media/file -->
<form action="/publish" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" id="title" name="title" required />

    <label for="content">Content:</label><br />
    <textarea class="form-control" id="content" name="content" rows="8"></textarea>

    <label for="author">Author:</label>
    <input type="text" class="form-control mb-3" id="author" name="author" required />

    <label for="image">Image (Optional):</label>
    <input type="file" class="mb-3 form-control-file" id="image" name="image" />
  </div>
  <button class="btn" name="button" type="submit">Publish</button>
</form>

<%- include('partials/footer.ejs') %>
